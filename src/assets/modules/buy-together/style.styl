#ProdBlockCompreJunto
    .leftCorner2, .bottom
        display: none 

    .prodBox
        display: block

#ProdAbas
    background: none
    padding-top 35px
    border-top solid 1px #bebebe
    .leftCorner2
        display: none 

    .aberta
        float: none 
        background: none 

        a 
            background: none 
            padding: 10px 0
            font-size: 18px
            font-weight: bold 
            text-align: center
            color: #000

.compreJunto li div.produto span.fake-select__label
    height: auto
    text-align: left
    padding-right: 45px
    margin: 0
    width: 100% 

.compreJunto form 
    display: flex 
    flex-flow: column nowrap

.fotosCompreJunto, .precoCompreJunto
    width: auto
    float: none 

.fotosCompreJunto
    display: flex 
    justify-content: space-between
    align-items: stretch

.compreJunto > li
    border-bottom: solid 1px rgba(0,0,0,.05)
    padding: 20px 0


.compreJunto 
    li 
        .produto 
            span
                width auto!important
                height auto!important

                div
                    height auto!important

        .plus
            display: flex
            align-items: center
            margin-top 0px!important

            font-size 35px!important
            font-weight normal!important
            line-height normal!important
            letter-spacing -0.55px
            color #cc2020

.compreJunto 
    .produto 
        .unidades_topo
            display: none

.precoCompreJunto 
    height auto

    strong
        display: block
        font-size 21px
        font-weight normal
        line-height normal
        letter-spacing normal
        color #222222
        margin-bottom: 8px

        +br
            display: none

    a 
        font-size 14px
        font-weight normal
        line-height normal
        letter-spacing normal
        color #878787

    .unidades_preco
        display: none

.precosCompreJunto
    margin-top: 20px!important
    text-align: left 

    .comprejuto_preco, .comprejunto_economize
        font-size 13px
        font-weight normal
        line-height normal
        color #878787

    .comprejunto_preco2
        strong
            display inline-block
            font-size 14px
            font-weight normal
            line-height normal
            color #222222
            margin: 0px

    li
        text-align: left

    .comprejunto_botao
        display: flex
        margin-top 8px

    .botao-compre-junto
        height 56px
        background: #4bc815!important
        border-radius: 0px
        
        font-size 20px!important
        letter-spacing -0.31px!important
        color #ffffff
        text-transform: capitalize

        span
            text-transform: capitalize
            font-weight normal!important
            line-height normal
    
.page-product
    &__buy-together
        #ProdAbas
            a
                display: none

// Abas produtos
#ProdAbas
    
    li, a
        float: nones
        background-image: none
        margin: 0 
        padding: 0

    .aberta a
        font-size 30px
        font-weight bold
        line-height normal
        letter-spacing -0.47px
        color #419ECF
        padding: 0px!important

    .tabs
        &__list
            display: flex
            align-items: stretch
            padding: 0px
            margin-bottom (gutter)

        &__item
            display: flex
            align-items: center
            padding-right: (gutter)

        &__link
            font-size 25px
            font-weight 300
            line-height normal
            letter-spacing -0.39px
            color #878787
            text-transform: capitalize


.product
    &__tabs
        margin 100px 0



@media desktop
    .fotosCompreJunto
        flex: 1 
        min-width: 0

    .compreJunto form 
        flex-flow: row nowrap


@media mobile
    #ProdBlock
        margin: 50px 0

    #ProdAbas 
        .tabs
            &__list
                flex-wrap: wrap

            &__item
                padding: 0px
                margin-bottom: (gutter /2)
                flex: 0 0 100%
                justify-content: center
            &__link
                padding: 0px
