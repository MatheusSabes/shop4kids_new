.footer 
    &__copyright
        margin-top 40px
        width 100%
        border-top 1px solid #211915
        padding 30px 0
        /* Font */
        font-family Montserrat
        font-size 14px
        font-weight normal
        font-stretch normal
        font-style normal
        line-height normal
        letter-spacing normal
        text-align center
        color #211915
    &__container 
        max-width: 1300px 
        margin: 0 auto
        padding: 50px (30px / 2)

    &__row 
        display: flex 
        justify-content: space-between
        flex-flow: row wrap
        margin: -(30px / 2)

    &__box 
        flex: 0 1 240px
        padding: (30px / 2)
        @media screen and (max-width: 992px)
            justify-content center
            flex 0 1 100%
        &--paymentsecurity
            display flex
            flex-direction column
            flex 1
            & h3
                font-family Montserrat
                font-size 16px
                font-weight 600
                font-stretch normal
                font-style normal
                line-height 1.19
                letter-spacing normal
                color #211915
                margin-bottom 18px
                &.title-security
                    margin-top 18px
        & .foo-seals
            display flex
            flex-wrap: wrap
            align-items: center
            & li
                &:not(:last-child)
                    margin-right 20px
            & img
                max-width: 140px
        &--item
            font-family Montserrat
            font-size 14px
            font-weight normal
            font-stretch normal
            font-style normal
            line-height 1.36
            letter-spacing normal
            color #211915            
            @media screen and (max-width: 992px)
                text-align center
    &__title 
        font-family Montserrat
        font-size 16px
        font-weight bold
        font-stretch normal
        font-style normal
        line-height normal
        letter-spacing normal
        color #211915
        padding-bottom: 16px
        @media screen and (max-width: 992px)
            text-align center
    &__link 
        font-family Montserrat
        font-size 14px
        font-weight normal
        font-stretch normal
        font-style normal
        line-height 1.36
        letter-spacing normal
        color #211915 

        &:hover
            color: color

        @media mobile 
            display: block
            text-align: center
            min-height: 48px

    &__contact 
        &-icon 
            display: inline-block
            vertical-align: middle
            margin-right: 5px
            font-size: 20px
            
            
.payments
    &__list
        display: flex
        align-items: center
        justify-content: flex-start
        flex-wrap: wrap

    &__item
        margin: 5px