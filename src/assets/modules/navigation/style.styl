// Efeitos de Transição 


@media(max-width: 991px)
    body
        &.menu__open
            & .navigation__container
                & *:not(::before)
                    z-index: 2
            & .navigation
                &:after
                    content ''
                    width: 100vw
                    height 100vh
                    position: fixed
                    left: 0
                    top: 0
                    z-index: 499
                    background-color: rgba(0, 0, 0, 0.5)
    .customer
        padding: 30px 30px 0 30px !important
        &__header
            display none
        &__label
            width: auto
            flex 0 0 auto
            display: flex
            width: 100%
            position relative
            align-items: center
            &:after
                content 'ou'
                margin: 0 10px
                order 1
                display: inline-block
            & > a
                font-family Montserrat
                font-size 12px
                font-weight bold
                font-stretch normal
                font-style normal
                line-height normal
                letter-spacing normal
                color #419ecf !important
                order 0
                margin-bottom: 0 !important
                &:not(.modal-login)
                    order: 3
        &__main
            display flex
            text-align left
            & > div
                width: 100%
                display: flex
                flex-wrap nowrap
                flex-direction column
                text-align left
                align-items: flex-start

    .menu
        &__link
            &--nv2
                font-family Montserrat
                font-size 12px
                font-weight normal
                font-stretch normal
                font-style normal
                line-height normal
                letter-spacing normal
                color #211915
                text-transform initial
    .navigation

        // Fundo do menu Transparente
        &__bg 
            position: fixed 
            top: 0 
            left: 0 
            z-index: 400
            width: 100%
            height: 100%
            background: rgba(0,0,0,.5)
            opacity: 0 
            visibility: hidden

        // Botão de Fechar
        .button__close 
            // Efeitos
            opacity: 0
            right 0
            left auto
            font-family Montserrat
            font-size 14px
            font-weight bold
            font-stretch normal
            font-style normal
            line-height normal
            letter-spacing normal
            color #ad0000
        // Conteudo do Menu (estrutura)
        &__container 
            position: fixed
            top: 0
            left: 0
            z-index: 500
            display: flex 
            flex-flow: column nowrap 
            width: 300px
            height: 100%
            max-height: 100%
            max-width: calc(100% - 45px) 
            background: #fff
            transform: translate3d(-100%, 0, 0)
            transition: all 300ms ease-in-out

        &__main 
            flex: 1 
            min-height: 0
            overflow-y: auto
            & [class*=__filter],
            & .menu__image
            & .menu__ul--footer
                display none
            & .header__attendance
                display flex

                & .attendance
                    &__header
                        display none
                    &__main
                        opacity 1
                        visibility: visible
                        position relative
                        width 100%
                        border 0
                        border-radius 0
                        box-shadow none
                        text-align left

    .menu__open
        .navigation 
            visibility visible
            &__container
                transform: translate3d(0, 0, 0) 

        .button__close
            opacity: 1

    // Transição para abrir o menu
    &[aria-hidden=false]
        .navigation 
            &__container 
                transform: translate3d(0, 0, 0)
                animation: slideOpen 500ms 1 ease

            &__bg 
                opacity: 1
                visibility: visible

        .button__close
            opacity: 1
            animation: slideOpenButton 500ms 1 ease
.set
    display: none
@media screen and (max-width: 992px)
    .set
        order: 2;
        flex: 0 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 45px;
        transition: all 200ms ease;
        &:before
            content: "\f105";
            font-family: "Font Awesome 5 Free";
            font-weight: 900;
            font-size: 20px;
    .menu--navigation .menu__item--has-child[aria-expanded=true] & .set
        transform: rotate(90deg);             

@media desktop
    .navigation
        background: #fff
        &__wrapper
            flex 0 0 100%
            order 3
            border-top solid 1px rgba(0, 0, 0, .17)
            border-bottom solid 1px rgba(0, 0, 0, .17)
            & > .navigation
                max-width: 1300px
                margin 0 auto
                position relative
                & .navigation__main
                    & .menu__ul--nv1
                        display flex
                        justify-content center
                        & > li
                            &:last-child
                                background-color: #FF6B6B
                                display flex
                                align-items center
                                justify-content: center
                                & > a
                                    color: #FFFFFF
                                    & > .menu__label
                                        font-family Montserrat
                                        font-size 16px
                                        font-weight normal
                                        font-stretch normal
                                        font-style normal
                                        line-height normal
                                        letter-spacing normal
                                        color #ffffff
                            & > a
                                display flex
                                align-items center
                                padding 9px 25px
                                & .menu__label
                                    font-family Montserrat
                                    font-size 16px
                                    font-weight normal
                                    font-stretch normal
                                    font-style normal
                                    line-height normal
                                    letter-spacing normal
                                    color #211915
                                & img
                                    margin-right: 11px
        &__bg, &__header, .button__close
            display: none 

        &__main 
            max-width: 1300px
            margin: 0 auto
 

 