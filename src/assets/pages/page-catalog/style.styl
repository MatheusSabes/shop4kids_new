.page-catalog
    & .showcase__item
        flex: 0 0 30.333333333%
        max-width: 33.333333333%
        display: block
        margin 20px 0
    & .breadcrumb
        height 50px
        border-bottom: 0
        margin-bottom: 0
        padding-bottom: 0
        display: flex
        align-items: center
        & .breadcrumb__item
            display: inline-block
            & a
                font-family Montserrat
                font-size 16px
                font-weight 500
                font-stretch normal
                font-style normal
                line-height normal
                letter-spacing normal
                color #211915
    &__container 
        display: flex 
        margin: '0 %s' % -(30px / 2)
        margin-top: 20px
    &__toolbar
        padding: 20px 0
        &--top 
            border-bottom: solid 1px rgba(0,0,0,.1)
            & .paginate
                display none
        &--bottom 
            border-top: solid 1px rgba(0,0,0,.1)
            text-align: right

    &__content 
        flex: 1 
        min-width: 0
        padding: 0 (30px / 2)
        @media screen and (min-width: 993px)
            margin-top: -73px
    &__filters

        padding: 15px
        & h3
            margin-top: 14px
            margin-bottom: 14px

            font-family MyriadPro
            font-size 16px
            font-weight bold
            font-stretch normal
            font-style normal
            line-height normal
            letter-spacing normal
            color #000000
        & a,
        & label
            font-family MyriadPro
            font-size 16px
            font-weight normal
            font-stretch normal
            font-style normal
            line-height normal
            letter-spacing normal
            color #000000
            position relative

            input
                opacity 0
                visibility hidden
                position absolute
    &__left
        display: flex
        flex-direction column
        flex 0 0 302px
        border solid 1px #bebebe
        padding 0 !important
        border-radius: 5px
        padding-left: 0
        padding-right: 0
        overflow hidden
        align-self flex-start
        margin-left: 15px
        & .button_close--filter
            display: none
        & .filtro-aplicado
            & > ul
                & > li
                    & > a
                        display: flex
                        align-items: center
                        & > span
                            display: flex
                            align-items: center
                            margin-left: 10px
                            & svg
                                width: 10px
                                height 10px
                                &:hover
                                    & path
                                        fill #ff6b6b
        & .button.button_mask.button_mask--filter
            display: none
        @media screen and (max-width: 992px)
            & .fechar-filtros
                font-size: 0
            & .button_mask.button_mask--filter
                display: none
            & .filtro-aplicado
                & > ul
                    & > li
                        & > a
                            & > span
                                display: none
        @media screen and (min-width: 993px)
            &:before
                content 'Filtre sua busca'
                font-size 16px
                font-weight normal
                font-stretch normal
                font-style normal
                line-height normal
                letter-spacing normal
                color #000000
                background-color: #ededed
                width: 100%
                height 42px
                border-bottom: solid 1px #ededed
                padding: 15px

    .main__container
        padding: 0 15px

    .smart-filter
        .filtro
            ul
                max-height: 100px
                overflow auto


@media (max-width: 991px) 
    .page-catalog 
        &__description
            margin-top 30px
            & img
                width: 100%
                height auto !important
        &__left 
            position: fixed
            top: 0 
            left: 0 
            z-index: 300
            .button__mask 
                opacity: 0
                visibility: hidden 

            .button__close 
                opacity: 0 

            // &[aria-hidden=true]
            //     .button__close 
            //         opacity: 0 
            //         animation: slideCloseButton 500ms 1 ease

            // &[aria-hidden=false]
            //     .button__mask
            //         opacity: 1 
            //         visibility: visible

            //     .button__close 
            //         opacity: 1
            //         animation: slideOpenButton 500ms 1 ease
            
        &__filters 
            position: fixed 
            z-index: 300
            left 0
            top: 0
            width: 300px
            height: 100% 
            max-width: 100%
            min-height: 100%
            background: #fff
            transform: translate3d(-100%, 0, 0)
            transition: all 300ms linear
            &.showFilter
                transform: translate3d(0, 0, 0)
            &-scroll 
                width: 100%
                height: 100% 
                padding: (30px / 2)
                overflow-y: auto


@media (min-width: 992px) 
    .page-catalog 
        &__left 
            padding: 0 (30px / 2)

            .button__mask 
                display: none 

        &__filters 
            position: static

        &__toolbar
            &--top 
                position: relative 
                margin-bottom: 60px 
                .paginate__pages
                    position: absolute 
                    right: 0 
                    top: 100% 
            &--bottom 
                .paginate__container 
                    display: flex 
                    justify-content: center
                    align-items: center 