#visualAbas, #visualBlock #add, .bonus_produto:empty
    display: none 

#col3D, #colFotos, #colVideo, #foto_p, #preco, .prodBox, .onVar, .onVar:hover
    background: none 
    border: 0
.thumbs__list
    & .slick-prev
        @media screen and (max-width: 992px)
            transform rotate(180deg) translateY(50%)
#colFotos
    display flex
    flex-direction row-reverse
    padding-right 20px
    @media screen and (max-width: 992px)
        flex-direction column
    & .produto-imagem-miniaturas
        border-top none !important
        padding-top 0 !important
        & > ul
            display flex
            flex-direction column
#form_comprar
    position relative
    & .page-product__short-review
        display none
        @media screen and (max-width: 992px)
            display flex
            justify-content: center
.varTit
    padding: 5px 0

    &, &:hover
        font-size: 14px
        font-weight: reuglar 
        color: #333
        background: none 
.produto-zoom-detalhe
    display: none
.precoCompreJunto
    border: 0

.varCont
    padding: 5px 0
    border: 0
    
#preco
    border: 0 
    padding: 0

    >br 
        display: none

    .txt-por
        display: none

        +br
            display: none

    .PrecoPrincipal
        font-size 35px
        font-weight bold
        line-height normal
        color #FF6B6B

        +br
            display: none

    .barra_cada, #economize
        display: none

#info_preco
    > br 
        display: none

    display: block
    font-size 14px
    font-weight 500
    line-height normal
    color #636161

    .txt-corparcelas .preco-parc2
        font-size: 0
        line-height: normal

        .color  
            font-size 14px
            line-height: normal
            margin-right: 4px

    .precoAvista
        font-size 14px
        font-weight 600
        
    .txt-forma-pagamento
        display: none



#linkPagParcelado
    display: inline-block 
    padding: 10px 20px
    border: 0
    font-size: 14px
    font-weight: regular 
    background: rgba(0,0,0, .5)
    color: #ffffff

#bloco-add-lista 
    margin: 0
    border: 0
    a
        display: flex 
        justify-content: center 
        align-items: center
        height: 30px
        padding: 5px
        border: solid 1px rgba(0,0,0,.1)
        font-size: 10px
        font-weight: regular
        text-transform: uppercase

#cepbox
    margin: 0
    padding: 10px 0 20px
    border: 0
    
    input 
        display: inline-block 
        vertical-align: middle

    label 
        display: none 

    .cepbox-text
        font-size: 14px
        text-transform: uppercase 
        padding: 10px 0

    .botao-simular-frete
        display: inline-flex 
        justify-content: center 
        align-items: center 
        vertical-align: middle
        width: 80px
        height: 45px
        margin-top: -2px
        margin-left: 10px   
        background: rgba(0,0,0,.5)
        font-size: 0 
        color: #fff 
        border: 0
        border-radius: 0
        &:before 
            content: 'Calcular'
            font-size: 12px

.botao-comprar 
    width: 100% 

    .botao-commerce-img
        background: none 
        width: 100% 
        height: 45px 
        padding: 0

#nao_disp
    padding: (30px / 2)
    border: solid 1px rgba(0,0,0,.05)

    h5 
        margin: 20px 0 0 
        font-size: 14px
        font-weight: bold 
        text-transform: uppercase 

.page-product 
    .main__container
        padding: 0 15px
    &__table
        display block
        position absolute
        right 0
        top 30px
        @media screen and (max-width: 992px)
            position relative
            righ initial
            top initial
            margin 0 auto
            text-align: center
            display: flex
            justify-content: center
            margin-top: 50px
            margin-bottom: 16px
        & a
            font-family Montserrat
            font-size 15.6px
            font-weight normal
            font-stretch normal
            font-style normal
            line-height normal
            letter-spacing normal
            color #419ecf
            display flex
            align-items center
        & svg
            margin-right: 16px
        & path
            fill #419ecf
    &__share
        width: 100%
        margin-top 50px
        @media screen and (max-width: 992px)
            display flex
            justify-content: center
    &__short-review
        @media screen and (max-width: 992px)
            display: none
    &__content
        padding-top 20px
        border-top 1px solid #bebebe
        margin-top 20px
        @media screen and (max-width: 992px)
            border 0
            & .page-product__price
                & .produto-preco
                    display flex
                    flex-direction column
                    align-items center
                    margin-bottom: 30px
                    text-align: center
                    & .precode
                        font-family Montserrat
                        font-size 18px
                        font-weight normal
                        font-stretch normal
                        font-style normal
                        line-height normal
                        letter-spacing normal
                        color #636161
                        text-align: center
                    & .PrecoPrincipal
                        font-family Montserrat
                        font-size 35.6px
                        font-weight 500 !important
                        font-stretch normal
                        font-style normal
                        line-height normal
                        letter-spacing normal
                        color #ff6b6b
                        text-align: center
    &__labels 
        display: block 
        padding: 10px 0

        #botoes 
            margin: -10px

    &__details 
        & .page-product__head
            display none
            @media screen and (max-width: 992px)
                display flex
                justify-content center
                text-align center
                border-bottom 0
                &, & strong
                    font-family Montserrat
                    font-size 14px
                    font-weight 500
                    font-stretch normal
                    font-style normal
                    line-height normal
                    letter-spacing normal
                    color #636161
        #info 
            display: none 

    &__image 
        position: relative 
        z-index: 10

        // Ajuste Zoom

        #wrap
            display: inline-block 
            position: relative

        #cloud-zoom-big 
            z-index: 100!important
            min-width: 100% 
            min-height: 100%
            left: 0 !important
            margin-left: 0 !important
            background-color: #fff

    &__name 
        font-size: 25px
        font-weight: bold
        line-height: normal
        color: #211915
        padding-bottom: 15px
        @media screen and (max-width: 992px)
            font-family Montserrat
            font-size 18px
            font-weight 600
            font-stretch normal
            font-style normal
            line-height normal
            letter-spacing normal
            color #211915
    &__head 
        display: flex 
        justify-content: space-between
        font-size: 14px
        padding: 10px 0
        padding-bottom 20px
        border-bottom solid 1px #bebebe
        margin-bottom 20px
        @media screen and (max-width: 992px)
            display none
    &__links 
        display: flex 
        flex-flow: row wrap
        margin: 10px -5px

        &-item
            flex: 1 1 50%
            padding: 5px

            a 
                display: flex 
                justify-content: center 
                align-items: center
                height: 30px
                padding: 5px
                border: solid 1px rgba(0,0,0,.1)
                font-size: 10px
                text-transform: uppercase

            &--compare 
                input 
                    display: none 

    &__actions 
        .passo1, #product-form-box
            display: flex 
            align-items: flex-end

        #product-form-box
            width: 100% 

        #quantidade 
            font-size: 0 
            padding: 0 
            margin: 0 (30px / 2) 0 0
            border: 0
            max-width: 112px
            max-height: 47px
            flex: 0 0 auto
            display: flex
            justify-content space-between
            align-items: stretch
            border: solid 1px #939393
            border-radius: 15px
            & button
                max-width 25px
                min-width 0
                width: 25px
            & label
                flex 1
                position relative
                &:before
                    content 'Qtd'
                    font-family Montserrat
                    font-size 14.6px
                    font-weight normal
                    font-stretch normal
                    font-style normal
                    line-height normal
                    letter-spacing normal
                    color #000000
                    position absolute
                    top -23px
                    left 50%
                    transform translateX(-50%)
                & input
                    border-color #939393 !important
        #quant
            width: 100% 
            font-size: 14px
            text-align: center
            border-width: 0 1px
        #bt_comprar
            flex: 1
            min-width: 0

        #minus
            order: -1

        #minus, #plus
            border: none
            background: none
            color: #bebdbd
            font-size: 30px
            padding: 0
            font-weight: 100
            line-height: normal
        
.related__list
    border-bottom: 1px solid #ccc

    button[class*=prev]
        transform: rotate(180deg) translateY(50%)
        
.texto_variacao
    display: flex 
    padding: 0
    @media screen and (max-width: 992px)
        justify-content center
    & > span
        display: none
    h2, span
        float: none 
        width: auto
        margin-right: 5px

        font-size: 18px
        line-height: normal
        font-weight: 700
        color: #333333
        @media screen and (max-width: 992px)
            font-family Montserrat
            font-size 18px
            font-weight 500
            font-stretch normal
            font-style normal
            line-height normal
            letter-spacing normal
            color #333333
    h2:after 
        content: ': '

.lista_cor_variacao
    padding: 10px 0 

.lista_cor_variacao, .lista_cor_variacao2 
    @media screen and (max-width: 992px)
        display flex
        justify-content center
    li 
        div
            display: flex
            align-items: center
            justify-content: center
            border-radius: 50%
            min-width 40px  
            min-height: 40px
.produto-calcular-frete,
#Aba2,
#Aba3
    display: none !important


#button-buy
    background: #6bcf60
    border: none!important
    padding 0
    height 64px

    >.botao-commerce-img
        border: none!important
        display flex
        align-items center
        justify-content: center
        font-family Montserrat
        font-size 21.5px
        font-weight bold
        font-stretch normal
        font-style normal
        line-height normal
        letter-spacing normal
        color #ffffff
        margin 0 auto
        height 64px
        @media screen and (max-width: 992px)
            font-family Montserrat
            font-size 18.9px
            font-weight 500
            font-stretch normal
            font-style normal
            line-height normal
            letter-spacing normal
            color #ffffff
        &:before
            content ''
            display inline-block
            background-image url('data:image/png;base64,')
            background-size initial
            background-position: center
            background-repeat no-repeat
            width 33px
            height 34px
            margin-right 13px

.modal-footer
    & .botao-continuar-comprando
        width: 200px
        height 40px
        background none
        background-color: #ff6b6b
        border: 0
        display flex
        justify-content center
        align-items center
        padding: 5px
        & .botao-commerce-img
            font-family Montserrat
            font-size 14px
            font-weight: 400
            color: #ffffff
            text-transform: initial
            text-align: left 
            white-space nowrap
    & .botao-prosseguir-compra
        width: 160px
        height 40px
        background none
        background-color: #6bcf60
        border: 0
        display flex
        justify-content center
        align-items center
        padding: 5px
        >.botao-commerce-img 
            font-family Montserrat
            font-size 16px
            font-weight: 400
            color: #ffffff
            text-transform: initial
            text-align: left 
@media desktop
    .page-product 
        &__essential 
            display: grid
            grid-template-areas: "image header" "image details"
            grid-template-columns: 1fr 50%
            grid-template-rows: auto 1fr

        &__image 
            grid-area: image 

        &__header 
            grid-area: header 
            
        &__details 
            grid-area: details
        
        &__content
            display: flex
            align-items: center
        
        &__price, &__actions
            flex: 1
            min-width 0px
