.flags

    &__ul
        display: flex
        align-items: center
        justify-content: center

    &__item
        margin-right: 5px

        &:last-child
            margin: 0

    &__title
        font-size 12px
        font-weight normal
        line-height normal
        letter-spacing 0.17px
        color #ffffff
        padding: 3px 10px 

    &__new
        background-color #878787

    &__featured
        background-color #222222

    &__free-shipping
        background-color #2ec8ff

    &__offer
        position absolute
        top: (gutter/2)
        right (gutter/2)

        display: flex
        align-items: center
        justify-content: center
        padding: 0

        width 46px
        height 46px

        background-color #ff0000
        border-radius: 50%

        font-size 12px
        font-weight 800
        line-height normal
        text-align center
        color #ffffff
        font-style: italic

        @media mobile
            top: 0
