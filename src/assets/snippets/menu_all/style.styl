.menu

    &__all
        display: flex
        align-items: center
        
        &--label
            position relative
            display: block
            font-size 15px
            font-weight normal
            line-height normal
            color color
            padding: (gutter/2) 0

            &:before
                content: ''
                position: absolute
                bottom: 0px
                left 0
                width: 0%

                display: block
                height: 2px
                background: #ff412e
                transition: all 0.2s ease-in-out

        &:hover
            .menu
                &--all
                    opacity 1
                    visibility: visible              

                &__all
                    &--label
                        &:before
                            content: ''
                            position: absolute
                            bottom: 0px
                            display: block
                            width: 100%
                            height: 2px
                            background: #ff412e
                            left: 0

    &__ul
        &--all-1
            column-count: 5

    &--all
        position absolute
        left 0
        right 0
        top: 100%
        height: 316px
        
        background-color: #ffffff
        padding: 30px
        opacity 0
        visibility hidden

        display: block
        overflow: auto

        box-shadow 0 0 7px 0 rgba(0, 0, 0, 0.1)

        transition: .25s ease-in-out;
        transition-property: opacity, visibility, transform;


        .menu--all-2
            padding: 0 5px

        .menu--all-3
            padding: 5px 10px 


    &__link
        &--all-1
            font-size: 15px
            font-weight: bold
            line-height: normal
            color #232323

        &--all-2
            font-size: 13px
            font-weight: normal
            line-height: normal
            color #232323
        
        &--all-3
            font-size: 13px
            font-weight: normal
            line-height: normal
            color #232323


    &__item
        &--all-1
            margin-bottom: 20px
