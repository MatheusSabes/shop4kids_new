.newsletter 
    padding: (gutter/2) 0
    margin-bottom 50px
    @media screen and (max-width: 992px)
        background-image: none !important
    &__container 
        max-width: 632px
        padding: 30px
        margin : 0 auto
        flex-wrap: wrap
        box-shadow: 0 6px 5px 1px rgba(0, 0, 0, 0.11)
        background-color: #ffffff
        border-radius: 15px
        margin-bottom: -30px
    &__header 
        display: flex 
        align-items: center
        text-align: center
        flex-wrap: wrap

    &__title 
        flex: 0 0 100%
        color: #419ecf
        font-size: 32px
        line-height: normal
        font-weight: 700

    &__description
        font-size: 16px
        font-weight: 400
        line-height: normal
        color   : #848484
        padding: (gutter/2)

    &__form 
        input 
            border: none
            box-shadow: 0 1px 0px 0 #211915
            border 0
            padding: 5px 0
            height initial
            line-height: 1.2
            &::placeholder
                font-family Montserrat
                font-size 14px
                font-weight normal
                font-stretch normal
                font-style normal
                line-height 10px
                letter-spacing normal
                color #211915
    &__box, &__actions
        padding: 5px 
     
    &__input, &__button
        width: 100% 

    &__button 
        padding: 0 (gutter)
        font-size: 18px
        font-weight: 700
        line-height 1
        color #fff
        background: transparent
        max-width : 346px
        border-radius: 10px
        background-color: #dcc100
        margin: 0 auto

@media (min-width: 768px)
    .newsletter
        &__form
            display: flex 
            justify-content: center
            align-items: center
            flex-wrap: wrap
            
        &__box
            flex: 1
            min-width: 0

        &__actions
            flex: 0 0 100%

@media (min-width: 992px)
    .newsletter 
        &__container 
            display: flex 
            justify-content: space-between
            align-items: center
        
       
        &__title,  &__box, &__actions
            padding: (30px / 2)

        &__main 
            flex: 1
            min-width: 0
            margin-left: 30px

        

    

    