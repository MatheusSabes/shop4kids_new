.modal-body
    width: 100%

.modal-header 
    position: relative 

    .close
        position: absolute 
        top: 0
        right: 0
        display: flex 
        justify-content: center 
        align-items: center 
        height: 100% 

.modal-body
    padding: 15px

    // .loader
