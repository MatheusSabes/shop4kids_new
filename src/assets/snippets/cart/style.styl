.cart 
    &:before
        content: ''
        position: absolute
        bottom: 3px
        left 0
        width: 0%

        display: block
        height: 2px
        background: #ff412e
        transition: all 0.2s ease-in-out

    &__price, &__amout-label 
        display: none 

    &__link 
        position: relative
        display: flex 
        justify-content: center 
        align-items: center 
        min-width: 45px
        min-height: 45px
        
        &:hover
            text-decoration: none

        svg
            width 33px
            height 30px
            fill #6bcf60

    &__env-amount
        width: 28px
        height 28px
        font-size 14px
        font-weight 400
        line-height normal
        color : #211915
        margin-left: 5px
        background: #eaeaea
        border-radius: 50%
        padding: 5px
        margin-left 0
        &:hover
            text-decoration: none
