@media (max-width: 991px)
    .menu 
        width: 100%
        overflow: hidden
        
        &--sub 
            display: none 
            background: rgba(0, 0, 0, .05)
                
        &--navigation 
            overflow-y: auto

            .menu 
                &__icon 
                    display: none 

                &__link
                    display: block 
                    padding: (30px/2) 30px
                    line-height: 1.2 

                &__item
                    &--nv1 
                        color: #000
                        text-transform: uppercase
                        font-weight: 700

                        + .menu__item--nv1 
                            border-top: solid 1px rgba(0,0,0,.1)

                    &--has-child 
                        display: flex 
                        justify-content: space-between
                        align-items: stretch
                        flex-flow: row wrap 

                        &:after 
                            icon: "\f105"
                            order: 2
                            flex: 0 0 auto
                            
                            display: flex 
                            justify-content: center 
                            align-items: center
                            width: 45px 
                            font-size: 20px

                            transition: all 200ms ease

                        > .menu__link 
                            flex: 1 
                            order: 1
                            min-width: 0
                            font-family Montserrat
                            font-size 15px
                            font-weight normal
                            font-stretch normal
                            font-style normal
                            line-height normal
                            letter-spacing normal
                            color #211915
                        > .menu--sub 
                            order: 3
                            flex: 0 0 100%

                        &[aria-expanded=true]
                            &:after 
                                transform: rotate(90deg)

