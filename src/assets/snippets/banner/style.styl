.page-home
    &__mobile
        display: none
        @media screen and (max-width: 992px)
            display block
            
            & .mobile-slick-next,
            & .mobile-slick-prev
                background-color transparent
                width: 30px
                height 30px
                max-width: initial
                max-height: initial
                display flex
                justify-content center
                align-items center
                padding: 0
                & svg
                    filter: drop-shadow( 3px 3px 2px rgba(255, 255, 255, .7))

                &.slick-prev
                    transform: rotate(180deg) translateY(50%)
.page-home__banner
    @media screen and (max-width: 993px)
        display: none
.banner 
    &__img 
        width: 100% 
        height: 100% 
        object-fit: cover 

    &__link 
        display: block 

    &__list
        & button
            &[class*=prev]
                transform rotate(180deg) translateY(50%)
                
    &--javascript 
        .banner
            &__list 
                white-space: nowrap 
                overflow: hidden 
                width: 100% 
                
            &__item 
                display: inline-block
                width: 100%
                height: 100% 


@media desktop 
    .banner 
            
        &--image
            .banner
                &__link
                    display: block
                    position: relative
                    overflow hidden

                    &:hover
                        img
                            transform: scale(1.02);

                &__img
                    transition: all 300ms ease-in-out 