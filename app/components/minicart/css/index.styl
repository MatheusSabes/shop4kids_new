.cart__dropdown 
    position: absolute
    right: 0
    background: #fff
    z-index: 99999999
    width: 350px
    padding: 0
    border-radius 10px
    border solid 1px #bcbbba
    background-color #ffffff
    top: 100%
    display: flex
    opacity 0
    visibility hidden
    transition: .25s ease-in-out
    transition-property: opacity, visibility, transform
    &.show
        opacity 1
        visibility visible
